{
  "name": "nodejs-create-release",
  "version": "0.0.8",
  "description": "NodeJS Create Release",
  "main": "./dist/index.js",
  "scripts": {
    "clear": "rimraf ./node_modules ./dist ./coverage ./package-lock.json",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "prebuild": "tsc --noEmit --project ./ && eslint ./src/**/*.ts --quiet --fix",
    "build": "ncc build ./src/index.ts -m -o ./dist/",
    "pretest": "rimraf ./coverage",
    "test": "jest",
    "watch": "tsc -w --project ./",
    "prepare": "tsc --noEmit --project ./ && eslint ./src/**/*.ts --quiet && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregoranders/nodejs-create-release.git"
  },
  "keywords": [
    "jest",
    "typescript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run prepare",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext .ts ./src"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "test-utils.ts",
      "/node_modules/"
    ],
    "coverageReporters": [
      "html",
      "lcovonly",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "author": "Gregor Anders <gregor.anders@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregoranders/nodejs-create-release/issues"
  },
  "homepage": "https://gregoranders.github.io/nodejs-create-release/",
  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/github": "4.0.0"
  },
  "devDependencies": {
    "@octokit/rest": "18.0.0",
    "@types/jest": "26.0.4",
    "@typescript-eslint/eslint-plugin": "3.6.0",
    "@typescript-eslint/parser": "3.6.0",
    "@zeit/ncc": "0.22.3",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "23.18.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-unicorn": "20.1.0",
    "generate-changelog": "1.8.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.1.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.6"
  }
}
